{
  "manifest_version": 3,
  "name": "CompraAgil FirmaVB",
  "version": "1.0.0",
  "description": "Sincroniza compras agiles de MercadoPublico con FirmaVB en tiempo real",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://buscador.mercadopublico.cl/*",
    "https://juiskeeutbaipwbeeezw.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://buscador.mercadopublico.cl/compra-agil*", "https://buscador.mercadopublico.cl/ficha*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
